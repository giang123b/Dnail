<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/OTP_fragment"
    android:background="@color/not_white"
    tools:context=".OTPFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_nhap_ma_otp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/textsize_nhapotp"
        android:layout_marginTop="@dimen/layout_marginTop_logo_intro"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_ma_otp_gui_toi_So"
        android:gravity="center"
        android:textSize="@dimen/textsize_ma_otp_gui_toi_So"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+84356865077"
        android:gravity="center"
        android:textSize="@dimen/textsize_sdt"
        />

    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:id="@+id/txt_pin_entry"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="4"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:pinAnimationType="popIn"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/second_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        />
    />
    <Button
        android:id="@+id/btn_next_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round"
        android:text="@string/text_tiep"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="@dimen/padding_button"
        android:imeOptions="actionDone"
        android:textColor="@color/white"

        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        />

</LinearLayout>