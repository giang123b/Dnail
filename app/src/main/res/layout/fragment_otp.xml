<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/OTP_fragment"
    android:background="@color/not_white"
    tools:context=".OTPFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_nhap_ma_otp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/textsize_nhapotp"
        android:layout_marginTop="@dimen/layout_marginTop_logo_intro"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_ma_otp_gui_toi_So"
        android:gravity="center"
        android:textSize="@dimen/textsize_ma_otp_gui_toi_So"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+84356865077"
        android:gravity="center"
        android:textSize="@dimen/textsize_sdt"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionDone"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/second_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        />
    />
    <Button
        android:id="@+id/btn_next_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round"
        android:text="@string/text_tiep"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:imeOptions="actionDone"
        android:textColor="@color/black"
        />

</LinearLayout>