<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pink_theme"
                android:padding="@dimen/padding_material_8dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_chi_tiet_giao_dich"
                    android:textSize="30sp"
                    android:gravity="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- linear show thong tin tho -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/padding_material_8dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/padding_material_8dp"
                    android:src="@drawable/avata_worker"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_yallow_24dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="@string/text_do_truong_giang"
                    android:textColor="@color/black"
                    android:padding="@dimen/padding_material_8dp"
                    android:gravity="center|left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="HN01-T001"
                    android:textColor="@color/black"
                    android:padding="@dimen/padding_material_8dp"
                    android:gravity="center|left"
                    />
            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/padding_material_8dp"
                android:layout_marginLeft="@dimen/padding_material_8dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dịch vụ thợ đến làm móng"
                android:textSize="25sp"
                android:gravity="center"
                android:padding="@dimen/padding_material_8dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/padding_material_8dp"
            android:layout_marginLeft="@dimen/padding_material_8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã giao dịch: #1230921"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/padding_material_8dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/padding_material_8dp"
            android:text="10:30 Ngày 23/10/2019"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cước phí:                  120.000 đ"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/padding_material_8dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "Khuyến mại:              -12.000 đ"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/padding_material_8dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phụ phí:                                 0 đ"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/padding_material_8dp"
            android:textSize="20sp"
            />

        <TextView
            android:layout_marginTop="@dimen/padding_material_8dp"
            android:layout_marginLeft="@dimen/padding_material_8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_money"
                android:layout_marginLeft="@dimen/padding_material_8dp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thanh toán bằng tiền mặt: 108.000 đ"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/padding_material_8dp"
                android:textSize="20sp"
                />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>